<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogStyle">@style/TestProgressTheme</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textColorPrimaryInverse">@color/colorWhite</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="android:textColorSecondaryInverse">@color/colorWhite</item>
    </style>

    <style name="TestProgressTheme">
        <item name="android:bottomBright">@color/colorAccent</item>
        <item name="android:bottomDark">@color/colorAccent</item>
        <item name="android:bottomMedium">@color/colorAccent</item>
        <item name="android:centerBright">@color/colorAccent</item>
        <item name="android:centerDark">@color/colorAccent</item>
        <item name="android:centerMedium">@color/colorAccent</item>
        <item name="android:fullBright">@color/colorAccent</item>
        <item name="android:fullDark">@color/colorAccent</item>
        <item name="android:topBright">@color/colorAccent</item>
        <item name="android:topDark">@color/colorAccent</item>
    </style>

</resources>
